<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#072227"
    tools:context=".SplashscreenActivity">

    <!--di bawah ini merupakan salah satu penggunaan komponen widgets berupa imageview
     1. untuk id dari imageView ini diberi nama id SplashsceenImage
     2. lebar gambar adalah 400 dan tingginya adalah juga 400dp
     3. isi dari imageView sendiri diisi dengan gambar logo wisata.png yang sudah
     dimasukkan ke dalam drawable semuanya
     4. posisi dari imageView adalah berada di tengah-tengah orientasi horizontal-->
    <ImageView
        android:id="@+id/SplashScreenImage"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>